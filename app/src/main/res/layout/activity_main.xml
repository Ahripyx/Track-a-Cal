<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:background="@color/white">

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp"
            >

            <!-- App Title -->
            <TextView
                android:id="@+id/tvAppTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Calorie Tracker"
                android:textStyle="bold"
                android:textSize="24sp"
                android:textColor="@color/black"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="14dp"
                />

            <!-- History button -->
            <Button
                android:id="@+id/btnHistory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="History"
                android:layout_gravity="center_horizontal"
                android:backgroundTint="#90CAF9"
                android:textColor="#222"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:layout_marginBottom="14dp"/>

            <!-- Daily Goals Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

                <!-- Current Calories Eaten -->
                <TextView
                    android:id="@+id/tvDailyGoalLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Calorie Intake:"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginEnd="10dp"/>

                <TextView
                    android:id="@+id/tvDailyGoalVal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2000"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:layout_marginEnd="28dp"
                    android:textStyle="bold"/>

                <!-- Separator -->
                <View
                    android:layout_width="1dp"
                    android:layout_height="18dp"
                    android:background="#DDDDDD"
                    android:layout_marginHorizontal="10dp"
                    />

                <!-- Remaining Calories Left -->
                <TextView
                    android:id="@+id/tvRemainingLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Remaining Cal:"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginEnd="10dp"
                    />

                <TextView
                    android:id="@+id/tvRemainingCalValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1800"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:textStyle="bold"/>
            </LinearLayout>

            <!-- Calorie Progress Bar -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Calories Eaten"
                android:textStyle="bold"
                android:layout_marginTop="22dp"
                android:layout_marginBottom="4dp"/>

            <ProgressBar
                android:id="@+id/progressBarCalories"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="18dp"
                android:max="2000"
                android:progress="200"
                android:progressTint="@android:color/holo_green_dark"
                android:backgroundTint="#eaeaea"/>

            <!-- Section Divider -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#cccccc"
                android:layout_marginTop="18dp"
                android:layout_marginBottom="8dp"/>

            <!-- Daily Stat Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Today's Stats"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_marginBottom="10dp"
                android:layout_gravity="center_horizontal"/>

            <!-- Section Divider -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#cccccc"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="12dp"/>

            <!-- Meal listings-->

            <!-- Breakfast Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="10dp">

                <TextView
                    android:id="@+id/tvBreakfastTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Breakfast:"
                    android:textStyle="bold"
                    android:textSize="16sp"/>

                <TextView
                    android:id="@+id/tvBreakfastCalories"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Calories: 350"
                    android:textSize="14sp"
                    android:layout_marginLeft="12dp"
                    android:textColor="@android:color/holo_orange_dark"/>

                <TextView
                    android:id="@+id/tvBreakfastFoods"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="• Oatmeal, • Banana"
                    android:layout_marginLeft="20dp"
                    android:textSize="13sp"/>
            </LinearLayout>

            <!-- Lunch Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="10dp">

                <TextView
                    android:text="Lunch:"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"/>
                <TextView
                    android:id="@+id/tvLunchCalories"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Calories: 0"
                    android:textSize="14sp"
                    android:layout_marginLeft="12dp"
                    android:textColor="@android:color/holo_orange_dark"/>
                <TextView
                    android:id="@+id/tvLunchFoods"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:text=""/>
            </LinearLayout>

            <!-- Dinner Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="10dp">

                <TextView
                    android:text="Dinner:"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textSize="16sp"/>
                <TextView
                    android:id="@+id/tvDinnerCalories"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Calories: 0"
                    android:textSize="14sp"
                    android:layout_marginLeft="12dp"
                    android:textColor="@android:color/holo_orange_dark"/>
                <TextView
                    android:id="@+id/tvDinnerFoods"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:text=""/>
            </LinearLayout>

            <!-- Snack Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="10dp">

                <TextView
                    android:text="Snacks:"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textSize="16sp"/>
                <TextView
                    android:id="@+id/tvSnacksCalories"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Calories: 0"
                    android:textSize="14sp"
                    android:layout_marginLeft="12dp"
                    android:textColor="@android:color/holo_orange_dark"/>
                <TextView
                    android:id="@+id/tvSnacksFoods"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:text=""/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <!-- Quick Add Buttons -->
    <LinearLayout
        android:id="@+id/quickAddLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#E3F2FD"
        android:padding="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:gravity="center">

        <!-- Breakfast Button -->
        <Button
            android:id="@+id/btnQuickAddBreakfast"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:text="Breakfast"
            android:backgroundTint="#90CAF9"
            android:textColor="#222"
            android:textSize="15sp"
            android:minWidth="0dp"
            android:maxLines="1"
            android:ellipsize="end"
            android:paddingLeft="0dp"
            android:paddingRight="0dp"
            android:layout_marginEnd="6dp"/>

        <!-- Lunch Button -->
        <Button
            android:id="@+id/btnQuickAddLunch"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:text="Lunch"
            android:backgroundTint="#90CAF9"
            android:textColor="#222"
            android:textSize="15sp"
            android:minWidth="0dp"
            android:maxLines="1"
            android:paddingLeft="0dp"
            android:paddingRight="0dp"
            android:layout_marginEnd="6dp"/>

        <!-- Dinner Button -->
        <Button
            android:id="@+id/btnQuickAddDinner"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:text="Dinner"
            android:backgroundTint="#90CAF9"
            android:textColor="#222"
            android:textSize="15sp"
            android:minWidth="0dp"
            android:maxLines="1"
            android:paddingLeft="0dp"
            android:paddingRight="0dp"
            android:layout_marginEnd="6dp"/>

        <!-- Snack Button -->
        <Button
            android:id="@+id/btnQuickAddSnack"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:text="Snack"
            android:backgroundTint="#90CAF9"
            android:textColor="#222"
            android:textSize="15sp"
            android:minWidth="0dp"
            android:maxLines="1"
            android:paddingLeft="0dp"
            android:paddingRight="0dp"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
