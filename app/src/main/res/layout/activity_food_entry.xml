<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <!-- Page Title -->
    <TextView
        android:id="@+id/tvFoodEntryTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Food / Drink Entry"
        android:textStyle="bold"
        android:textSize="24sp"
        android:textColor="@color/black"
        android:gravity="center"
        android:paddingTop="20dp"
        android:paddingBottom="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <!-- Main Form -->
    <ScrollView
        android:id="@+id/scrollViewEntry"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        android:overScrollMode="ifContentScrolls"
        app:layout_constraintTop_toBottomOf="@id/tvFoodEntryTitle"
        app:layout_constraintBottom_toTopOf="@id/footerBar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="24dp"
            android:paddingEnd="24dp"
            android:paddingTop="4dp"
            android:paddingBottom="16dp">

            <!-- Food Name -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Food Name:"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_marginTop="10dp"/>
            <EditText
                android:id="@+id/etFoodName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="E.g., Chicken Salad"/>

            <!-- Calories -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Calories:"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_marginTop="12dp"/>
            <EditText
                android:id="@+id/etCalories"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:hint="E.g., 350"/>

            <!-- Protein, Carbs, Fat as horizontal row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="12dp">

                <!-- Protein -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Protein"
                        android:textSize="15sp"/>
                    <EditText
                        android:id="@+id/etProtein"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        android:hint="g"/>
                </LinearLayout>

                <!-- Carbs -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginStart="10dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Carbs"
                        android:textSize="15sp"/>
                    <EditText
                        android:id="@+id/etCarbs"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        android:hint="g"/>
                </LinearLayout>

                <!-- Fat -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginStart="10dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Fat"
                        android:textSize="15sp"/>
                    <EditText
                        android:id="@+id/etFat"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        android:hint="g"/>
                </LinearLayout>
            </LinearLayout>

            <!-- Serving Size -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Serving Size:"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_marginTop="14dp"/>
            <EditText
                android:id="@+id/etServingSize"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="E.g., 1 cup, 100g"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Meal Type:"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_marginTop="14dp"
                android:layout_marginBottom="4dp"/>
            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="2"
                android:orientation="horizontal"
                android:alignmentMode="alignMargins"
                android:rowCount="2"
                android:layout_marginBottom="10dp">

                <CheckBox
                    android:id="@+id/cbBreakfast"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Breakfast"/>
                <CheckBox
                    android:id="@+id/cbLunch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Lunch"/>
                <CheckBox
                    android:id="@+id/cbDinner"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Dinner"/>
                <CheckBox
                    android:id="@+id/cbSnack"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Snack"/>
            </GridLayout>

            <!-- Save Entry Button -->
            <Button
                android:id="@+id/btnSaveEntry"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Save Entry"
                android:backgroundTint="@color/black"
                android:textColor="@android:color/white"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="12dp"
                android:textStyle="bold"/>

        </LinearLayout>
    </ScrollView>

    <!-- Nav Bar -->
    <LinearLayout
        android:id="@+id/footerBar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="#EEEEEE"
        android:padding="12dp"
        android:gravity="center">

        <Button
            android:id="@+id/btnBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Back"
            android:backgroundTint="@color/black"
            android:textColor="@color/white"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>